#!/usr/bin/env sh

yabai -m config \
    auto_balance        on     \
    layout              bsp    \
    mouse_modifier      fn     \
    mouse_action1       move   \
    mouse_drop_action   swap   \
    split_ratio         0.50   \
    split_type          auto   \
    top_padding         5      \
    bottom_padding      5      \
    left_padding        5      \
    right_padding       5      \
    window_gap          5      \
    window_opacity      off    \
    window_shadow       on     \
    window_zoom_persist on 

echo "yabai configuration loaded.."